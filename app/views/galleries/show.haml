- content_for :main_menu, render(:partial => "shared/main_menu")
- content_for :sidebar, render(:partial => "shared/sidebar")
.span-18.last
  - if @prev
    = link_to image_tag("left_arrow.png", :name => "left-arrow", :onmouseover => "roll('left-arrow', '/images/left_arrow_hover.png')", :onmouseout => "roll('left-arrow', '/images/left_arrow.png')"), gallery_path(@prev)
  \...#{@current.title}...
  - if @next
    = link_to image_tag("right_arrow.png", :name => "right-arrow", :onmouseover => "roll('right-arrow', '/images/right_arrow_hover.png')", :onmouseout => "roll('right-arrow', '/images/right_arrow.png')"), gallery_path(@next)
  .devider-1
  = image_tag(@current.file.url(:medium))
  = render "shared/fb_like"
  
  = render "shared/comments"