.span-18.last{:align => "right"}
  %h2 забравена парола?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  .span-18.last{:align => "center"}
    = devise_error_messages!
    %p изпращане на инструкции за смяна на парола
    
  .span-9.input-label{:align => "right"}
    %b e-mail
  .span-9.input-holder.last{:align => "left"}
    = f.email_field :email
    
  .span-18.last{:align => "center"}
    = f.submit "изпрати"

.span-18.last{:align => "right"}
  %br= render :partial => "devise/shared/links"